{
    "version": "2.0.0",
    "tasks": 
    [
        {
            "label": "C/C++: g++.exe build active file",
            "type": "process",
            "command": "D:/mingw64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\*.c",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "D:/mingw64/bin/"
            },
            "group": "build",
            "detail": "compiler: D:/mingw64/bin/gcc.exe",
            "problemMatcher": "$gcc"
        }
    ]
}